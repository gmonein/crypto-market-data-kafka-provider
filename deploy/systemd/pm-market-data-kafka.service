[Unit]
Description=pm-market-data redpanda stack
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
WorkingDirectory=/opt/pm-market-data
EnvironmentFile=-/etc/pm-market-data/pm-market-data.env
Environment=COMPOSE_PROJECT_NAME=pm-market-data-kafka
ExecStart=/usr/bin/docker compose -f deploy/docker-compose.kafka.yml up -d
ExecStop=/usr/bin/docker compose -f deploy/docker-compose.kafka.yml down
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
